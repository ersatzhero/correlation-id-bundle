{
  "name": "ersatzhero/correlation-id-bundle",
  "version": "1.0.0",
  "description": "This bundle implements handling of a Correlation ID. Adds it to the requests, messages and logs.",
  "type": "symfony-bundle",
  "authors": [{
    "name": "Matthias Moser"
  }],
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.4",
    "symfony/config": "^7.2",
    "symfony/http-kernel": "^7.2",
    "symfony/http-client": "^7.2",
    "symfony/messenger": "^7.2",
    "symfony/dependency-injection": "^7.2",
    "symfony/uid": "^7.2.0",
    "monolog/monolog": "^3.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0.0",
    "symfony/phpunit-bridge": "^7.2.0",
    "symfony/maker-bundle": "*"
  },
  "autoload": {
    "psr-4": {
      "Ersatzhero\\CorrelationIdBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Ersatzhero\\CorrelationIdBundle\\Tests\\": "tests/"
    }
  }
}